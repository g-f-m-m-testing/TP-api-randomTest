{
  "name": "tp-api-randomtest",
  "version": "0.0.1",
  "description": "NodeJs api-rest for testing features",
  "main": "index.js",
  "engines": {
    "node": ">=12.2.0"
  },
  "scripts": {
    "build": "ttsc && cp ./package.json ./dist && cp -R -L ./node_modules ./dist",
    "dev": "nodemon  --inspect=0.0.0.0:56745 src/server.ts",
    "dev:debug:legacy": "nodemon --legacy-watch --inspect=0.0.0.0:56745 src/server.ts",
    "lint": "eslint src/**/*.{js,ts}",
    "start": "node ./dist/server.js",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register src/**/*.spec.ts"
  },
  "author": "G.F.M-M",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.8",
    "@types/express": "^4.17.2",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.7.0",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.19.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.2",
    "mocha": "^7.0.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.8.1",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.10",
    "typescript-transform-paths": "^1.1.14"
  }
}
